# ------------------------------
# ПУТИ К ДАННЫМ (DataPathsConfig)
# ------------------------------
# Путь к Excel файлу с транзакциями
DATA_PATHS__TRANSACTIONS_FILE=data/transactions_data.xlsx

# Путь к JSON файлу с клиентами
DATA_PATHS__CLIENTS_FILE=data/clients_data.json

# Путь к SQLite базе данных (warehouse)
DATA_PATHS__DATABASE_FILE=warehouse.db

# Префикс для файлов с результатами анализа
DATA_PATHS__ANALYSIS_RESULTS_JSON_FILE_PREFIX=analysis_results_

# Директория для отчетов и визуализаций
DATA_PATHS__REPORTS_DIR=reports

# Файл для хранения хешей данных (автоматическая очистка БД)
DATA_PATHS__DATA_HASHES_FILE=.data_hashes.json


# ------------------------------
# ПАРАМЕТРЫ АНАЛИЗА (AnalysisConfig)
# ------------------------------
# Количество топ-услуг для отображения (1-20)
ANALYSIS__TOP_SERVICES_LIMIT=5

# Количество месяцев для прогнозирования (1-12)
ANALYSIS__FORECAST_MONTHS=1

# Минимальное количество месяцев данных для прогноза
ANALYSIS__MIN_MONTHS_FOR_FORECAST=3


# ------------------------------
# НАСТРОЙКИ ЛОГИРОВАНИЯ (LoggingConfig)
# ------------------------------
# Название приложения (для интерфейса логгера)
LOGGER__APP_NAME=Finance Analysis

# Режим отладки (true = цветной вывод в консоль, false = JSON формат)
LOGGER__DEBUG=true

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOGGER__LOG_LEVEL=INFO

# Включить логирование в файл (true/false)
LOGGER__ENABLE_FILE_LOGGING=false

# Директория для файлов логов
LOGGER__LOGS_DIR=logs

# Имя файла логов
LOGGER__LOGS_FILE_NAME=app.log

# Максимальный размер файла лога в MB
LOGGER__MAX_FILE_SIZE_MB=10

# Количество backup файлов при ротации
LOGGER__BACKUP_COUNT=5